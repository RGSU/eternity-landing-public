.stars
  position relative
  display inline-block
  font-size rem(60px)
  letter-spacing 10px

  &::before
    display inline-block
    padding-left 10px
    color var(--text-blind-color)
    background-color #f99
    content "☆☆☆☆☆"

  &__rating
    position absolute
    top 0
    left 0
    display inline-block
    overflow hidden
    &::before
      display inline-block
      padding-left 10px
      color #fd7625
      content "★★★★★"


