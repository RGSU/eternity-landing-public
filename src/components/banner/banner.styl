.banner
  container()

  &__wrapper
    position relative
    padding 20px 20px 200px 20px
    overflow hidden
    background-color var(--card-color)
    border-radius 30px
    +desktop()
      padding 64px

  &__content
    position relative
    z-index 1
    display flex
    flex-direction column
    gap 24px
    align-items flex-start
    +desktop()
      gap 40px

  &__title
    margin 0
    font-size rem(40px)
    +desktop()
      font-size rem(80px)

  &__visual
    position absolute
    right -110px
    bottom -150px
    z-index 0
    width 550px
    +above(48em)
      right -50px
      bottom -80px
    +desktop()
      right -250px
      bottom -280px
      width 895px
    +above(80em)
      right -120px
      bottom -130px
