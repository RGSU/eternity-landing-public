.faq
  display flex
  flex-direction column
  gap 20px
  margin 0
  padding 0
  list-style none

  &__item
    margin 0
    background-color var(--card-color)
    border-radius rem(30px)

  &__question
    display block
    margin 0
    &-button
      position relative
      display flex
      gap rem(32px)
      align-items center
      justify-content space-between
      width 100%
      padding rem(20px)
      color var(--color-white)
      font-weight 600
      font-size rem(18px)
      line-height 1.4
      text-align left
      background-color transparent
      border none
      border-radius rem(30px)
      transition all .2s
      +desktop()
        padding rem(32px)
        font-size rem(24px)
      &[aria-expanded="true"]
        & ^[-1]-icon
          &::before
            transform translate(-50%, -50%) rotate(0deg)
      &:hover
      &:focus-visible
        color var(--color-hover)
        & ^[-1]-icon
          background-color var(--primary-color)
          border-color var(--primary-color)
      &-icon
        position relative
        flex-shrink 0
        width 48px
        height 48px
        margin 1px 1px 0 0
        border 1px solid var(--border-color)
        border-radius 50%
        transition all .2s ease
        &::before
          position absolute
          top 50%
          left 50%
          width 14px
          height 1.5px
          background-color #fff
          transform translate(-50%, -50%) rotate(90deg)
          transition all .2s ease
          content ""
        &::after
          position absolute
          top 50%
          left 50%
          width 14px
          height 1.5px
          background-color #fff
          transform translate(-50%, -50%)
          content ""
  &__answer
    padding 0 rem(20px) rem(20px) rem(20px)
    color var(--color-white)
    font-weight 400
    font-size rem(16px)
    line-height 1.4
    p:last-child
      margin-bottom 0
    +desktop()
      padding 0 rem(32px) rem(32px) rem(32px)
      font-size rem(18px)
