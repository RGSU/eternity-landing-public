.page
  position relative
  z-index 2
  display flex
  flex-direction column
  min-height 100vh
  min-height var(--doc-height)
  overflow hidden
  &--dark
    background-color var(--bg-dark-color)
  &__bg
    &-vector
      position absolute
      z-index -1
      background-color rgba(167, 19, 115, .4)
      border-radius 100%
      filter blur(250px)
      &:nth-child(1)
        top -350px
        right -352px
        size 518px
      &:nth-child(2)
        top 50px
        left 200px
        size 360px
      &:nth-child(3)
        top 750px
        left 140px
        z-index 2
        size 466px

