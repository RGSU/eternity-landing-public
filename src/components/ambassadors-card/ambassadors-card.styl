.ambassadors-card
  display flex
  flex-direction column
  width 345px
  +above(48em)
    width 325px
  &.wheel-carousel-slide
    position absolute
    & ^[0]__img
      &::after
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(167, 19, 115, .5)
        transition all .2s ease
        content ''
    & ^[0]__content
      opacity 0
  &.active
    z-index 1
    & ^[0]__img
      &::after
        opacity 0
    & ^[0]__content
      opacity 1

  &__img
    position relative
    height 420px
    overflow hidden
    border-radius 30px
    +above(48em)
      height 400px
    img
      width 100%
      height 100%
      object-fit cover
      object-position center
      vertical-align top

  &__content
    display flex
    flex-direction column
    gap 8px
    padding-top 20px
    text-align center
    transition all .2s ease
    +above(48em)
      padding-top 40px


  &__name
    font-weight 600
    font-size rem(18px)
    +above(48em)
      font-size rem(24px)

  &__post
    font-size rem(16px)
    +above(48em)
      font-size rem(18px)
