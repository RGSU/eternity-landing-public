.scroll-top
  position fixed
  right 32px
  bottom 32px
  z-index 100
  display block
  width 46px
  height 46px
  padding 0
  color var(--text-color)
  background-color var(--color-white)
  border 1px solid #e1e2e1
  border-radius 50%
  cursor pointer
  opacity 0
  transition border-color .3s ease, color .3s ease, opacity 1s ease
  pointer-events none
  &--visible
    opacity 1
    pointer-events auto
  .sprite-icon
    position absolute
    top 50%
    left 50%
    margin-top 1px
    transform translate(-50%,-55%)

  &:hover
    color var(--color-white)
    border-color var(--color-white)

  +below(1000px)
    right 20px
    bottom 20px

