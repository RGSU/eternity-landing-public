.checkbox
  display inline-block

  input
    visually-hidden()

  &__label
    position relative
    display flex
    flex-flow row nowrap
    gap 12px
    align-items flex-start
    width auto
    margin 0
    color var(--text-color)
    font-weight 400
    font-size rem(16px)
    font-family $font-family
    line-height 1.5
    cursor pointer
    transition all .2s ease
    user-select-none()

  &__check
    position relative
    display block
    flex 0 0 auto
    margin 2px 0
    border 1px solid var(--color-grey-60)
    border-radius 4px
    transition all .2s ease
    size 20px
    &::after
      position absolute
      top 50%
      left 50%
      display block
      background-image url("data:image/svg+xml,%3Csvg width='10' height='8' viewBox='0 0 10 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M9.41042 0.589583C9.0848 0.263965 8.55687 0.263966 8.23125 0.589584L4 4.82083L1.76875 2.58958C1.44313 2.26397 0.915201 2.26397 0.589583 2.58958V2.58958C0.263965 2.9152 0.263965 3.44313 0.589583 3.76875L4 7.17917L9.41042 1.76875C9.73603 1.44313 9.73603 0.915201 9.41042 0.589583V0.589583Z' fill='white'/%3E%3C/svg%3E%0A")
      background-repeat no-repeat
      transform translate(-50%, -50%)
      content ""
      size 10px 7px
    .is-invalid &
      border-color var(--error-color)

  input:focus-visible + ^[0]__label ^[0]__check
    border-color var(--color-blue-60)
    box-shadow 0 0 0 4px rgba(13,110,253,.25)

  input:checked + ^[0]__label ^[0]__check
    background-color var(--color-blue-60)
    border-color var(--color-blue-40)
    &::after
      opacity 1

  input:disabled + ^[0]__label ^[0]__check
    background-color var(--color-grey-10)
    border-color var(--color-grey-30)

  input:checked:disabled + ^[0]__label ^[0]__check
    &::after
      border-color var(--color-grey-30)

  ^[0]:hover input:not(:disabled) + ^[0]__label ^[0]__check
    border-color var(--color-blue-60)




