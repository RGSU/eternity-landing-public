.video-thumbnail
  position relative
  height 100%
  overflow hidden
  border-radius 12px
  &:hover
    & ^[0]__play
      background-color var(--primary-dark-color)

  &__preview
    position relative
    display block
    height 100%
    text-decoration none
    img
      width 100%

  &__preview-video
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 10
    width 100%
    height 100%
    object-fit cover

  &__toolbar
    position absolute
    right 16px
    bottom 8px
    left 12px
    z-index 25
    display flex
    gap rem(16px)
    align-items center
    pointer-events none
    +desktop()
      right 20px
      bottom 12px

  &__play
    position absolute
    top 50%
    left 50%
    display flex
    align-items center
    justify-content center
    size rem(48px)
    padding 0
    color var(--color-white)
    background-color var(--primary-color)
    border none
    border-radius 50%
    transform translate(-50%, -50%)
    transition all .3s ease
    pointer-events none
    .icon
      size rem(24px)

  &__likes
  &__views
    display inline-flex
    gap rem(8px)
    align-items center
    padding 0
    color var(--color-white)
    font-weight 600
    font-size rem(18px)
    line-height 1.2
    text-decoration none
    background none
    border none
    .icon
      flex 0 0 auto
      size rem(20px)

  &__likes
    transition all .3s ease
    pointer-events auto
    &:hover
    &:focus-visible
      color var(--color-blue-60)
      text-decoration none
      outline none
    .icon
      position relative
      top -2px


  &__duration
    position absolute
    top 10px
    right 10px
    z-index 25
    display inline-block
    padding 3px 8px 2px
    color var(--color-white)
    font-weight 400
    font-size rem(14px)
    line-height 1.4
    background rgba(7, 14, 24, .2)
    border-radius 4px
    pointer-events none
    &:empty
      display none
