.product-card
  display flex
  flex-direction column
  gap 24px
  max-width 350px
  padding rem(20px)
  background-color var(--card-color)
  border-radius 30px
  +above(100em)
    gap 40px
    max-width 440px
    padding rem(32px)

  &__top
    display flex
    justify-content flex-start

  &__chapter
    padding rem(4px) rem(10px)
    font-size rem(12px)
    background-color rgba(255, 255, 255, .1)
    border-radius 30px
    +above(100em)
      font-size rem(14px)

  &__img
    margin 0 auto
    size 150px
    overflow hidden
    border-radius 16px
    +above(100em)
      size 180px
    img
      width 100%
      height 100%
      object-fit cover
      object-position center
      vertical-align top

  &__content
    display flex
    flex 1 0 auto
    flex-direction column
    gap 20px
    align-items flex-start
    +above(100em)
      gap 16px


  &__title
    margin 0

  &__text
    margin 0
    font-size rem(16px)
    line-height 1.5
    +above(100em)
      font-size rem(18px)

  &__button
    display flex
    align-items center
    justify-content center
    size 36px
    margin-top auto
    padding 0
    color var(--color-white)
    background-color transparent
    border 1px solid rgba(255, 255, 255, .2)
    border-radius 50%
    transition all .2s ease
    +above(100em)
      size 48px
      .icon
        size 24px
    &:hover
      background-color var(--primary-color)
      border-color var(--primary-color)
    .icon
      size 20px

