.intro
  position relative
  &__box
    display flex
    flex-direction column
    gap 32px
    align-items center
    justify-content center
    min-height 100vh


  &__title
    font-size rem(48px)

  &__bg
    position absolute
    top 0
    left 0
    z-index -1
    display none
    width 100%
    height 100%
    background url('../img/face.png')
    background-repeat no-repeat
    background-position center
    background-size cover
    opacity .8
    mix-blend-mode color-dodge
    +desktop()
      background-size contain

