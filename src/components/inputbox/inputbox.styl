.inputbox
  position relative
  display flex
  flex-flow row nowrap
  align-items center
  width 100%
  height rem(52px)
  padding 0 rem(16px)
  color var(--text-color)
  font-weight 400
  font-size rem(16px)
  font-family $font-family
  font-variant-numeric lining-nums proportional-nums
  line-height 1
  background-color #565961
  background-clip padding-box
  border 1px solid #565961
  border-radius rem(12px)
  transition all .3s ease
  appearance none
  +desktop()
    height rem(56px)
    font-size rem(18px)
  &:focus-within
    border-color var(--primary-color)
    outline none

  &--comment
  &--textarea
    height rem(110px)
    textarea
      width calc(100% + 12px)
      height 100%
      margin-right -12px
      padding-right 12px

  &--question
    height rem(74px)
    textarea
      width calc(100% + 12px)
      height 100%
      margin-right -12px
      padding-right 12px

  .is-invalid &
    border-color var(--error-color)

  input
  textarea
    padding 0
    color var(--text-color)
    font-weight 400
    font-size rem(16px)
    background transparent
    border none
    caret-color #000
    font-variant-numeric lining-nums proportional-nums
    +desktop()
      font-size rem(18px)
    &:focus-visible
      outline none
    &:disabled
      background-color #494c54
    &::placeholder
      color rgba(255, 255, 255, .3)
      opacity 1
    &:-webkit-autofill
      transition background-color 10000000s ease-out

  textarea
    resize none
    custom-scrollbar(6px, transparent, var(--primary-color))

  &__label
    position absolute
    top rem(28px)
    left rem(16px)
    z-index 5
    display inline-block
    color var(--text-blind-color)
    font-size rem(16px)
    line-height 1.5
    transform translateY(-50%)
    transition all .4s ease
    pointer-events none
    +desktop()
      font-size rem(18px)

  &__btn-clear
    position relative
    display none
    flex 0 0 auto
    size 40px
    padding 0
    background-color transparent
    border none
    border-radius 50%
    cursor pointer
    &::before
    &::after
      position absolute
      top 50%
      left 50%
      display block
      size 14px 1px
      margin-left -7px
      background-color var(--primary-color)
      transition background-color .2s
      content ""
    &::before
      transform rotate(45deg)
    &::after
      transform rotate(-45deg)

    &:hover
    &:focus-visible
      &::before
      &::after
        background-color var(--primary-dark-color)

  &__search-submit
    display inline-flex
    align-items center
    justify-content center
    size 56px
    color var(--color-grey-60)
    background-color transparent
    border none
    &:hover
    &:focus-visible
      color var(--color-hover)
    .icon
      flex 0 0 auto
      size 20px

  &--label
    & input
      padding-top rem(12px)
      opacity 0
      &:focus
      &[value]
      &:not(:placeholder-shown)
        opacity 1
        & + ^[0]__label
          font-size rem(12px)
          transform translateY(-110%)
    & textarea
      min-width 100%
      padding-top 0
      opacity 0
      &:focus
      &[value]
      &:not(:placeholder-shown)
        height calc(100% - 2rem)
        margin-top 1.5rem
        opacity 1
        & + ^[0]__label
          font-size rem(14px)
          transform translateY(-110%)

  &--search
    height 64px
    padding 0
    border-color var(--color-grey-20)
    border-style none none solid
    border-width 1px
    border-radius 0
    &:hover
      border-color var(--color-blue-60)
    &:focus-within
      border-color var(--color-blue-60)
      outline none
    ^[0] input
      flex 0 1 100%
      height 46px
      background-color transparent

  &--search-wide
    background-color transparent

    & ^[0]__icon
      flex 0 0 auto
      size rem(24px)
      order -1
      margin-right rem(12px)
      fill var(--color-grey-80)

    & ^[0]__label
      left rem(52px)

  &--border-white
    color var(--color-white)
    background-color transparent
    border-color var(--color-white)
    &:hover
      border-color var(--color-blue-20)
    &:focus-within
      border-color var(--color-blue-20)
      outline 2px solid var(--color-blue-40)
    input
      color var(--color-white)
      background-color transparent
      &::placeholder
        color var(--color-blue-20)

    & ^[0]__label
      color var(--color-blue-20)
