.header
  position fixed
  top 0
  z-index 300
  width 100%
  height 76px
  transform none
  transition all .3s ease
  &--hidden
  body.is-scroll-locked &
    transform translateY(-120%)
  .page.page--scrolled &
    background-color rgba(32, 33, 36, .251)
    backdrop-filter blur(10px)
  +desktop()
    height 92px
  +desktop()
    height 92px

