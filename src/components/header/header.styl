  &__container
    position relative
    display flex
    flex 1 0 auto
    flex-flow row nowrap
    gap rem(20px)
    align-items center
    justify-content space-between
    width 100%
    max-width 2000px
    height 76px
    margin 0 auto
    padding 0 16px
    &::before
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      z-index 210
      display block
      content ""
    +desktop()
      height 92px
      padding 0 40px
      &::before
        display none
    +above(90em)
      gap rem(40px)

  &__left
    display flex
    gap rem(40px)
    &-buttons
      display flex
      gap rem(14px)
      align-items center

  &__search-button
    display flex
    gap 8px
    align-items center
    width 100%
    min-height 56px
    margin-bottom 32px
    padding 10px 60px 10px 22px
    color var(--color-grey-60)
    background-color var(--color-white)
    border 1px solid var(--color-grey-40)
    border-radius 8px
    transition all .2s ease
    &:hover
    &:focus-visible
      color var(--color-blue-60)
      border-color var(--color-blue-60)
    .icon
      size 20px
    &-caption
      font-size rem(16px)
    +desktop()
      width auto
      margin-bottom 0
    +above(90em)
      padding 10px 120px 10px 32px

  &__social
    display flex
    gap rem(8px)
    order 2
    margin-top auto
    &-button
      size rem(40px)
      color var(--color-grey-60)
      background-color var(--color-grey-10)
      border-radius rem(12px)
      &:hover
      &:focus-visible
        color var(--color-hover)
        background-color var(--color-blue-20)
      .icon
        size rem(20px)
    +desktop()
      order 0
      margin-top 0

  &__logo
    position relative
    z-index 230
    +desktop()
      flex initial

  &__nav
    position fixed
    top 0
    right 0
    bottom 0
    left auto
    z-index 301
    display flex
    flex-direction column
    gap 40px
    justify-content end
    width 100%
    max-width 100%
    height max-content
    min-height 485px
    padding 88px 16px 20px 16px
    overflow-x hidden
    overflow-y auto
    background-color var(--card-color)
    border-radius 0 0 rem(30px) rem(30px)
    transform translateY(-150%)
    transition transform .3s
    &-sections
      display flex
      flex-direction column
      gap 20px
      align-items flex-start
      & ^[1]-link
        font-weight 600
        font-size rem(18px)
        line-height 1.4
        +desktop()
          font-size rem(24px)
    &-bottom
      display flex
      flex-direction column
      gap 32px
      +desktop()
        gap 50px
    &-links
      display flex
      flex-direction column
      gap 16px
      align-items flex-start
      & ^[1]-link
        font-weight 400
        font-size rem(12px)
        line-height 1.7
        +desktop()
          font-size rem(14px)
    &-buttons
      display flex
      flex-wrap wrap
      gap 8px
    &-link
      position relative
      display flex
      gap 12px
      align-items center
      text-decoration none
      &:hover
      &:focus-visible
        &::after
          width 100%
      .icon
        size 20px
        +desktop()
          size 24px
      &::after
        position absolute
        bottom 0
        left 0
        width 0
        height 1px
        background-color #fff
        transition all .2s ease
        content ""
    ^[0].is-nav-open &
      transform none
    +desktop()
      gap 64px
      max-width 480px
      min-height 620px
      padding 104px 40px 40px 40px
      border-radius rem(30px) 0 rem(30px) rem(30px)
  &__menu
    display flex
    gap 8px
    &-btn
      display flex
      &--desktop
        display none
        +desktop()
          display flex
      &--mobile
        +desktop()
          display none
    &-burger
      z-index 302

  &__contacts-button
    padding 16px 0
    color var(--color-grey-80)
    font-weight 600
    font-size rem(18px)
    line-height 1.4
    text-align left
    background-color transparent
    border none
    transition all .2s ease
    &:hover
    &:focus-visible
      color var(--color-blue-60)
      background-color transparent
      border-color transparent
    +desktop()
      display flex
      gap 6px
      align-items center
      justify-content center
      padding 16px 24px
      color var(--color-grey-100)
      text-align center
      background-color var(--color-white)
      border 1px solid var(--color-grey-40)
      border-radius 10px
      &:hover
      &:focus-visible
        color var(--color-blue-60)
        background-color var(--color-blue-20)
        border-color var(--color-blue-40)
    &-icon
      display none
      +desktop()
        display block
  &__button-question
    position relative
    z-index 230
    flex 0 0 auto
    order 5
    transition all .3s ease
    .page.is-menu-open &
      +below($desktop)
        position absolute
        transform translateX(-150%)
        visually-hidden()
        opacity 0
        transition opacity 0s ease
    +desktop()
      min-height rem(46px)
      padding rem(8px) rem(16px)
    +above(90em)
      min-height rem(56px)
      padding rem(12px) rem(28px)

  &__menu-btn
    position relative
    z-index 210

  &__actions
    position sticky
    bottom 0
    z-index 230
    display flex
    align-items center
    justify-content space-around
    margin-top auto
    padding 12px 0
    background-color var(--color-white)
    box-shadow 0 -7px 24px 0 rgba(11, 65, 191, .1)
    +desktop()
      position relative
      bottom auto
      display flex
      justify-content flex-start
      padding 0
      background-color transparent
      box-shadow none

  &__btn
    display inline-flex
    align-items center
    justify-content center
    size 56px
    color var(--color-grey-60)
    background-color transparent
    border none
    &.active
    &:hover
    &:focus-visible
      color var(--color-blue-60)
    .icon
      flex 0 0 auto
      size 20px
    img
      display block
      flex 0 0 auto
      max-width 22px
      height auto
      border 1px solid #c0d6f6
    +desktop()
      size 40px
      &--menu
        display none
      &--lang
        order 5
    +above(90em)
      size 56px
