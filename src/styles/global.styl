:root
  --doc-height 100%

html
  box-sizing border-box
  min-width 320px
  margin 0
  font-size 100%
  -ms-overflow-style scrollbar
  -ms-text-size-adjust 100%
  scroll-behavior smooth


*
*:before
*:after
  box-sizing inherit

html
body
  height 100vh
  height var(--doc-height)

body
  text-base()
  position relative
  width 100% /* Компенсация уменьшения масштаба */
  background-color var(--bg-dark-color )

  // background radial-gradient(circle at 10% 20%, rgba(255, 126, 95, 0.8), transparent 50%), radial-gradient(circle at 50% 50%, rgba(254, 180, 123, 0.8), transparent 50%), radial-gradient(circle at 90% 80%, rgba(106, 17, 203, 0.8), transparent 50%), radial-gradient(circle at 30% 70%, rgba(37, 117, 252, 0.8), transparent 50%), url('../img/snow-overlay.jpg')
  backface-visibility hidden
  text-rendering optimizeLegibility
  font-variant-numeric lining-nums proportional-nums
  font-smoothing()
  &:after
    display table
    clear both
    content ""
  &:has(dialog[open])
    overflow hidden
  +desktop()
    custom-scrollbar(10px, transparent, var(--primary-color))
    overflow-y scroll
    &::-webkit-scrollbar-thumb
      border-radius 3px
    &::-webkit-scrollbar-track
      border-radius 3px

:focus:not(:focus-visible)
  outline none

:target
  scroll-margin-top 100px
  +desktop()
    scroll-margin-top 120px
